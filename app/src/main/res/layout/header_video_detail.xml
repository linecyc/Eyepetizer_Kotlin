<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
        name="headerVideo"
        type="com.linecy.eyepetizer.data.model.ItemList"
        />
    <variable
        name="eventHandling"
        type="com.linecy.copy.ui.home.listener.EventHandling"
        />
  </data>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clipChildren="false"
      android:orientation="vertical"
      android:padding="@dimen/padding_normal"
      tools:background="@color/black"
      tools:ignore="ContentDescription"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"

          >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{headerVideo.data.title}"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold"
            tools:text="特条|[公牛历险记]终极预告"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_extra_small"
            android:paddingTop="@dimen/padding_smaller"
            android:text="@string/author_focus_num"
            android:textColor="@color/white"
            android:textSize="@dimen/font_smaller"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_smaller"
            android:paddingTop="@dimen/padding_smaller"
            android:text="@{headerVideo.data.description}"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            tools:text="由打造「冰川时代」系列和「里约大冒险」系列的蓝天工作室原班人马制作的「公牛历险记」，将于 2018 年 1 月 19 日以 2D、3D、中国巨幕 3D、杜比全景声、杜比视界制式登陆全国影院与观众见面。公牛费迪南和小女孩一家人温馨十足的成长之路、与萌物小伙伴们众志成城反抗出逃的坚定决心，以及冒险途中「笑」果感动齐飞的精彩故事，都让人期待不已。一起走进电影院，享受这部开年最欢脱的动画电影吧！"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_like"
            android:drawablePadding="@dimen/margin_smallest"
            android:drawableStart="@drawable/ic_like"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal"
            android:text="1111"
            android:textColor="@color/white"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_share_without_padding"
            android:drawablePadding="@dimen/margin_smallest"
            android:drawableStart="@drawable/ic_action_share_without_padding"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal"
            android:text="2222"
            android:textColor="@color/white"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_replay"
            android:drawablePadding="@dimen/margin_smallest"
            android:drawableStart="@drawable/ic_replay"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal"
            android:text="3333"
            android:textColor="@color/white"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_offline"
            android:drawablePadding="@dimen/margin_smallest"
            android:drawableStart="@drawable/ic_offline"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal"
            android:text="缓存"
            android:textColor="@color/white"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/divider"
          android:background="@color/divider"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal"
        >
      <TextView
          android:layout_width="0dp"
          android:layout_height="45dp"
          android:layout_weight="1"
          android:background="@drawable/home_page_header_cover"
          android:gravity="center"
          android:text="hahh"
          android:textColor="@color/white"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="45dp"
          android:layout_marginLeft="@dimen/margin_normal"
          android:layout_marginRight="@dimen/margin_normal"
          android:layout_weight="1"
          android:background="@drawable/home_page_header_cover"
          android:gravity="center"
          android:text="hahh"
          android:textColor="@color/white"
          />
      <TextView
          android:layout_width="0dp"
          android:layout_height="45dp"
          android:layout_weight="1"
          android:background="@drawable/home_page_header_cover"
          android:gravity="center"
          android:text="hahh"
          android:textColor="@color/white"
          />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_middle"
        android:layout_marginLeft="@dimen/margin_extra_small"
        android:layout_marginRight="@dimen/margin_extra_small"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center_vertical"
        android:onClick="@{(v) -> eventHandling.onBannerAuthorClick(v, headerVideo)}"
        android:orientation="horizontal"
        >

      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          app:loadCirclePicture="@{headerVideo.data.author.icon}"
          tools:src="@mipmap/ic_launcher"
          />
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          android:paddingLeft="@dimen/padding_normal"
          >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:maxLines="1"
            android:text="@{headerVideo.data.author.name}"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold"
            tools:text="开眼精选"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@{headerVideo.data.author.description}"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            tools:text="电影、剧集、戏剧抢先看"
            />
      </LinearLayout>
      <TextView
          android:text="@string/author_focus"
          android:textColor="@color/white"
          style="@style/Button_Dark_Oval_Bg.White"
          />
    </LinearLayout>

  </LinearLayout>
</layout>