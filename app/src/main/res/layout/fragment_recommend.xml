<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="fHomeModel"
        type="com.linecy.copy.mvvm.viewmodel.RecommendViewModel"
        />
  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <com.linecy.copy.ui.misc.ViewContainer
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        app:viewFull="@{fHomeModel.observableViewStyle.get()}"
        >
      <RelativeLayout
          android:id="@+id/content"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:refresh="@{fHomeModel.observableViewStyle.get().isRefresh}"
            >
          <android.support.v7.widget.RecyclerView
              android:id="@+id/recyclerView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:homeAdapter="@{fHomeModel.observableHomeModel.get()}"
              />
        </android.support.v4.widget.SwipeRefreshLayout>
      </RelativeLayout>
    </com.linecy.copy.ui.misc.ViewContainer>

  </LinearLayout>
</layout>
