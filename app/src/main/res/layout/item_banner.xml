<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <data>
    <import type="com.linecy.core.data.model.HomeModel.ItemList"/>
    <variable
        name="bannerList"
        type="java.util.List&lt;ItemList>"
        />
  </data>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clipChildren="false"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/bannerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_action_more_arrow_dark"
        android:onClick="gotoDaily"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_middle"
        android:text="开眼今日编辑精选"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/font_largest"
        android:textStyle="bold"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:clipChildren="false"
        app:loadBanner="@{bannerList}"
        />
  </LinearLayout>
</layout>